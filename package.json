{
  "name": "chatgpt-explainer",
  "version": "1.0.0",
  "description": "Cognify is a powerful Chrome extension that allows you to instantly explain and translate text from any webpage. With a sleek chat interface, you can ask follow-up questions and get context-aware responses powered by ChatGPT.",
  "main": "background.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "npm run build:css && npm run build:extension",
    "build:css": "node scripts/build-tailwind.js",
    "build:extension": "rm -rf dist && webpack --mode production && npm run build:css && npm run copy-assets && npm run generate-icons && cp manifest.json dist/ && cp background.js dist/ && cp content.js dist/ && cp content.css dist/",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "generate-icons": "mkdir -p scripts && node scripts/generate-icons.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chrome-extension",
    "react",
    "chatgpt",
    "translation",
    "explanation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "dompurify": "^3.2.4",
    "glob": "^11.0.1",
    "marked": "^15.0.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-shadow-root": "^6.2.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.313",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "canvas": "^3.1.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
